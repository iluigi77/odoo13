<odoo>
    <data>
        <record id="material_list_for_lot" model="ir.ui.view">
            <field name="name">stock.production.lot.form.materials</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']" position="inside">
                    <group>
                        <field name='mrp_bom_id'/>
                        <field name='material_product_id' mode='tree'>
                            <tree>
                                <field name='name'/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
   
    </data>
</odoo>