<odoo>
    <data>
        <record id="product_template_service_budget" model="ir.ui.view">
            <field name="name">product.template.service_budget</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//div[@name='options']" position="inside">
                    <div>
                        <field name="no_budgetable"/>
                        <label for="no_budgetable"/>
                    </div>
                </xpath>

          </field>
        </record>

    </data>
</odoo>