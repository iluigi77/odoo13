<odoo>
    <data>
        <record id='product_template_view_inherit_tax_group' model='ir.ui.view'>
            <field name='name'>product.template.from.tax.group</field>
            <field name='model'>product.template</field>
            <field name='inherit_id' ref='product.product_template_only_form_view'/>
            <field name="priority">1</field>

            <field name='arch' type='xml'>
                <xpath expr="//field[@name='taxes_id']" position='before'>
                    <field name='client_tax_group_id'/>
                </xpath>
                <xpath expr="//field[@name='supplier_taxes_id']" position='before'>
                    <field name='supplier_tax_group_id'/>
                </xpath>
                <xpath expr="//field[@name='taxes_id']" position='attributes'>
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//field[@name='supplier_taxes_id']" position='attributes'>
                    <attribute name="required">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>