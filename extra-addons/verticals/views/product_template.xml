<odoo>
    <data>
        <!-- PDF BIN FOR PRODUCT TEMPLATE -->
        <record id="pdf_product" model="ir.ui.view">
            <field name="name">product.template.pdf</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']" position="inside">
                    <field name="pdf_bin"/>
                </xpath>
          </field>
        </record>

        <!-- RELATINSHIP WITH VERTICALS LOT FOR PRODUCT TEMPLATE -->
        <record id="vertical_lot_for_product" model="ir.ui.view">
            <field name="name">product.template.vertical_lot</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_general']" position="inside">
                    <field name="vertical_id"/>
                </xpath>
          </field>
        </record>

        <!-- LIST PRODUCTS BY VERTICALS LOT FOR PRODUCT TEMPLATE -->
        <record id="list_vertical_lot" model="ir.ui.view">
            <field name="name">product.template.list_vertical_lot</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']//group[1]" position="after">
                    <page name="list_for_vertical_lot" >
                        <group string="Lote Vertical">
                            <tree >
                                <field name="products_by_lots" />
                            </tree>
                        </group>
                    </page>    
                </xpath>
            </field>
        </record>


    </data>
</odoo>