<odoo>
    <data>
        <record id="posik_report_posik_report_form" model="ir.ui.view">
            <field name="name">posik_report.posik_report.form</field>
            <field name="model">posik_report.posik_report</field>
            <field name="arch" type="xml">
                <form string="Sitios Web">
                    <sheet>
                        <group name='header'>
                        
                        </group>
                        <group name="tittle">
                            <group >
                                <field name="tittle" />
                                <field name="date_name" />
                            </group>
                            <group >
                                <field name="client_id" />
                                <field name="task_id" />
                                
                                <field name="name_client" readonly="1"/>
                                <field name="informe_text_client"/>
                            </group>
                        </group>
                        <hr/>

                        <notebook>
                            <page string='Actividades'>
                                <field name="activities_seccion" mode='tree'>
                                    <tree
                                        decoration-bf="type_row == 'seccion'"
                                        decoration-info="type_row == 'subseccion'"
                                        decoration-warning="type_row == 'shor_activity'"
                                        >
                                        <field name='header_name'/>
                                        <field name='name'/>
                                        <field name='url'/>
                                        <field name='type_row' invisible="1"/>
                                    </tree>
                                </field>
                                <div class="oe_clear"/>
                            </page>
                            <!-- <page string='Actividades'>
                                <field name="activity_url" mode='tree'>
                                    <tree>
                                        <field name='name'/>
                                        <field name='seccion_id'/>
                                        <field name='subseccion_id'/>
                                        <field name='url'/>
                                    </tree>
                                </field>
                                <div class="oe_clear"/>
                            </page> -->
                            <page string='Link Building'>
                                <field name="link_building_ids" />
                                <div class="oe_clear"/>
                            </page>
                            <page string='Inversión en Publicidad'>
                                <field name="advertising_investment_ids">
                                    <tree>
                                        <field name="provider_id"/>
                                        <field name="client_id" invisible='1' />
                                        <field name="web_client"/>
                                        <field name="importe"/>
                                        <field name="date_informe"/>
                                        <field name="month_informe"/>
                                    </tree>
                                </field>
                                <div class="oe_clear"/>
                            </page>
                            <page string='Horas Invertidas'>
                                <group>
                                    <button name="generate_hours_activities" string="Calcular Horas por Sección" action="gap_report_detail_action_view" icon="fa-arrow-circle-down" type="object" class="oe_highlight"/>
                                </group>
                                <field name="hour_seccion">
                                    <tree
                                        editable="bottom"
                                        create="false"
                                        delete="false"
                                        >
                                        <field name="name"/>
                                        <field name="hours_internal" widget="float_time"/>
                                        <field name="hours_external" widget="float_time"/>
                                    </tree>
                                </field>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="posik_report_posik_report_tree" model="ir.ui.view">
            <field name="name">posik_report.posik_report.tree</field>
            <field name="model">posik_report.posik_report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="tittle" />
                    <field name="name_client" />
                </tree>
            </field>
        </record>

        <record id="posik_report_posik_report_search" model="ir.ui.view">
            <field name="name">posik_report.posik_report.search</field>
            <field name="model">posik_report.posik_report</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tittle" />
                    <field name="name_client" />
                </search>
            </field>
        </record>
    </data>
</odoo>