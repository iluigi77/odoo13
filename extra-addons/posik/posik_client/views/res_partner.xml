<odoo>
    <data>
        <record id="rest_partner_form_social_media" model="ir.ui.view">
            <field name="name">res.partner.form.social_media</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <!-- <xpath expr="//form//sheet//field[@name='image_1920']" position="before"> -->
                    <!-- <field name="logo" /> -->
                    <!-- <field name="logo" widget='image' class="oe_avatar" options='{"preview_image": "image_128"}'/> -->
                <!-- </xpath> -->

                <xpath expr="//form//sheet//group[1]" position="after">
                    <group string='Informes'>
                        <field name="informe_text" />
                    </group>
                    <group>
                        <group string='Sitios Web'>
                            <field name="web_site" />
                        </group>
                        <group string='Redes Sociales'>
                            <field name="social_network"  options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
      
    
    </data>
</odoo>