<odoo>
    <data>
        <record id="posik_project_view_form" model="ir.ui.view">
            <field name="name">project.task.form.posik_project</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//group[1]//group[1]//field[@name='user_id']" position="after">
                    <field name='client_id' 
                        class="o_task_user_field"
                        options='{"no_open": True}'/>
                    <field name='web_client' domain="[('client_id', '=', client_id)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                    <field name='url'/>
                    <field name='seccion_id' options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                    <field name='subseccion_id' domain="[('parent_seccion_id', '=', seccion_id)]" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
                
                </xpath>

                <xpath expr="//form//sheet//group[1]//group[2]//field[@name='date_deadline']" position="after">
                    <field name='date_init'/>
                    <field name="duration_time" widget="float_time"/>
                </xpath>

            </field>
        </record>

        <record id="posik_project_view_quick_create" model="ir.ui.view">
            <field name="name">project.task.form.quick_create.posik_project</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.quick_create_task_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name='client_id' 
                        class="o_task_user_field"
                        options='{"no_open": True}'/>
                    <field name='seccion_id'/>
                
                </xpath>

            </field>
        </record>
    </data>
</odoo>