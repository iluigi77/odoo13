<odoo>
    <data>
      <record id="social_media_client_web_site_form" model="ir.ui.view">
            <field name="name">social_media_client.web_site.form</field>
            <field name="model">social_media_client.web_site</field>
            <field name="arch" type="xml">
                <form string="Sitios Web">
                    <sheet>
                        <group name="main">
                            <group name="right">
                                <field name="web" />
                                <field name="url" />
                                <field name="logo" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="social_media_client_web_site_tree" model="ir.ui.view">
            <field name="name">social_media_client.web_site.tree</field>
            <field name="model">social_media_client.web_site</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="web" />
                    <field name="url" />
                </tree>
            </field>
        </record>

        <record id="social_media_client_web_site_search" model="ir.ui.view">
            <field name="name">social_media_client.web_site.search</field>
            <field name="model">social_media_client.web_site</field>
            <field name="arch" type="xml">
                <search>
                    <field name="web" />
                    <field name="url" />
                </search>
            </field>
        </record>

    </data>
</odoo>